<templates>
    <t t-name="ptav-radio-image" t-inherit="sale_product_configurator.saleProductConfigurator.ptav-radio" t-inherit-mode="extension">
       <xpath expr="//div[hasclass('form-check')]" position="after">
           <img class="attr_value_img" style="width: 100px;"
                t-attf-src="/web/image?model=product.attribute.value&amp;field=website_product_detail_image&amp;id=#{ptav.id}"/>
       </xpath>
    </t>
</templates>
